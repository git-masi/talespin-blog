<% include ./views/partials/header %>

<h1>index page</h1>

<% blogs.forEach(blog => { %>
    <div>
      <h2><%= blog.title %></h2>
      <img src="<%= blog.img %>">
      <span><%= blog.created %> </span>
      <p><%= blog.body.substring(0,75) %>... </p>
      <a href="/blogs/<%= blog._id %>">SEE MORE</a>
    </div>
<% }) %>

<% include ./views/partials/footer %>